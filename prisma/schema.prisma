// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                   String   @id @default(cuid())
  email                String   @unique
  password             String
  name                 String?
  notificationsEnabled Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  savedItems SavedItem[]
}

model Route {
  id          String   @id @default(cuid())
  name        String
  number      String
  origin      String
  destination String
  totalStops  Int
  duration    Int
  createdAt   DateTime @default(now())

  stops Stop[]
}

model Stop {
  id        String @id @default(cuid())
  name      String
  latitude  Float
  longitude Float
  sequence  Int
  routeId   String
  route     Route  @relation(fields: [routeId], references: [id])

  @@index([routeId])
}

model SavedItem {
  id       String   @id @default(cuid())
  userId   String
  nickname String?
  type     ItemType @default(JOURNEY)

  // For bus line bookmarks (type: ROUTE)
  routeId String?

  // For complex journeys (type: JOURNEY)
  itineraryData   Json?
  originLat       Float?
  originLng       Float?
  destinationLat Float?
  destinationLng Float?
  destinationName String?
  totalDistance   Int?
  totalDuration   Int?

  lastViewed DateTime?
  createdAt  DateTime  @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([userId, type])
}

enum ItemType {
  ROUTE
  JOURNEY
}
